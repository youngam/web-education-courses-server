<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="hackspace.dev.pojo.User" table="users" catalog="education_courses">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="string">
            <column name="name" length="255" not-null="true" unique="true"/>
        </property>
        <property name="password" type="string">
            <column name="password" length="255" not-null="true" unique="true"/>
        </property>
        <property name="userTypeId" type="java.lang.Integer">
            <column name="userTypeId"/>
        </property>
    </class>
</hibernate-mapping>